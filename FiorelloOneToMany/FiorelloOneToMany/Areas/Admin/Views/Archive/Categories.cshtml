@model List<CategoryVM>
@{
    ViewData["Title"] = "Index";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="create-btn">
            <a asp-action="Create" class="btn-success btn-rounded btn-fw ">Create</a>
        </div>
        <div class="row">
            <div class="grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Slider Table</h4>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>
                                            Name
                                        </th>
                                        <th>Options</th>
                                    </tr>
                                </thead>
                                <tbody>
                                         @foreach (var item in Model)
                                    {
                                    <tr>
                                    <td class="py-1">
                                    @item.Name
                                    </td>

                                    <td>
                                                <form style="display:inline-block" method="post" asp-action="ExtractCategory" asp-route-id="@item.Id">
                                    <button type="submit" class="btn-primary btn-primary btn-rounded btn-fw">Extract</button>

                                    </form>

                                    </td>
                                    </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>





